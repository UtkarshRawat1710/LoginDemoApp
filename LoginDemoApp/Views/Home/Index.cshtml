
@model Tuple<IEnumerable<Car>, IEnumerable<Feedback>>

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-text">
        <h1>Find Your Perfect Ride Today!</h1>
        <p>Affordable, Reliable, and Fast Car Rentals</p>
        <a href="#browse" class="btn btn-primary">Browse Cars</a>
    </div>
</section>

<!-- Search Bar -->
<section class="search-section" id="browse">
    <input type="text" id="searchInput" placeholder="Search cars by brand or model..." onkeyup="searchCars()" />
</section>

<!-- Car Display Section -->
<section class="car-display" >
    <h2 class="text-center my-4">Available Cars</h2>

    <div class="car-container" id="carContainer">
        @foreach (var car in Model.Item1)
        {
            <div class="car-card">
                <img src="@car.ImageUrl" alt="@car.Brand" />
                <h3>@car.Brand @car.Model</h3>
                <p><strong>Year:</strong> @car.Year</p>
                <p><strong>Color:</strong> @car.Color</p>
                <p><strong>Price:</strong> ₹@car.BookingPrice</p>
                <button onclick="promptLogin()">Book Now</button>
            </div>
        }
    </div>
</section>

<!-- Benefits Section -->
<section class="benefits">
    <h2>Why Choose Us?</h2>
    <div class="benefit-items">
        <div class="benefit"><i class="fas fa-wallet"></i> Affordable Prices</div>
        <div class="benefit"><i class="fas fa-headset"></i> 24/7 Support</div>
        <div class="benefit"><i class="fas fa-car"></i> Wide Car Selection</div>
        <div class="benefit"><i class="fas fa-shield-alt"></i> Fully Insured</div>
    </div>
</section>

<!-- Testimonials Section -->

<section class="testimonials">
    <h2 class="testimonial-header">What Our Customers Say</h2>
    <div class="testimonial-cards">
        @foreach (var testimonial in Model.Item2)
        {
            <div class="testimonial">
                <blockquote>"@testimonial.Message"</blockquote>
                <p>– <strong>@(testimonial.User?.Name ?? "Anonymous")</strong></p>
            </div>
        }
    </div>
</section>


<!-- CTA Section -->
<section class="cta">
    <h2>Ready to Ride?</h2>
    <p>Sign up now and book your dream car in minutes!</p>
    <a href="/Account/Register" class="btn btn-success">Sign Up</a>
</section>

<script>
    function promptLogin() {
        alert("Please login or signup to use services.");
        window.location.href = "/Account/Register";
    }

    function searchCars() {
        var input = document.getElementById("searchInput").value.toLowerCase();
        var cards = document.querySelectorAll(".car-card");

        cards.forEach(function(card) {
            var text = card.textContent.toLowerCase();
            card.style.display = text.includes(input) ? "block" : "none";
        });
    }
</script>

