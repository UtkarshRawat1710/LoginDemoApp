@model IEnumerable<LoginDemoApp.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
    Layout = null; // Use "_Layout" if you have one
}

@await Html.PartialAsync("adminheader")

<div class="container mt-5 mb-5" style="min-height: 70vh;">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white text-center">
                    <h4>All Bookings</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning text-center">No bookings found.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <thead class="table-dark text-center">
                                    <tr>
                                        <th>Customer</th>
                                        <th>Email</th>
                                        <th>Car</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Total (₹)</th>
                                        <th>Status</th>
                                        <th>Payment Mode</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model)
                                    {
                                        <tr>
                                            <td>@booking.User?.Name</td>
                                            <td>@booking.User?.Email</td>
                                            <td>
                                                @if (booking.Car != null)
                                                {
                                                    @($"{booking.Car.Brand} {booking.Car.Model}")
                                                }
                                                else
                                                {
                                                    <em>Car info not available</em>
                                                }
                                            </td>
                                            <td>@booking.StartDate.ToString("dd MMM yyyy")</td>
                                            <td>@booking.EndDate.ToString("dd MMM yyyy")</td>
                                            <td>₹@booking.TotalAmount</td>
                                            <td class="text-center">
                                                <span class="badge bg-@(
                                                    booking.Status?.ToString() == "Confirmed" ? "success" :
                                                    booking.Status?.ToString() == "Pendings" ? "warning" :
                                                    "danger")">
                                                    @booking.Status
                                                </span>
                                            </td>
                                            <td>@booking.PaymentMode</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("footer")
