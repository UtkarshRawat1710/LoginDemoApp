@model IEnumerable<LoginDemoApp.Models.Feedback>

@{
    ViewData["Title"] = "View Feedback";
    Layout = null;
}

@await Html.PartialAsync("adminheader")

<!-- Alert message (Success/Error) -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert" id="autoFadeAlert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert" id="autoFadeAlert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-5 mb-5" style="min-height: 70vh;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Customer Feedback</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">No feedback submitted yet.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover">
                                <thead class="table-dark text-center">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Message</th>
                                        <th>Date Submitted</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Select((fb, index) => new { fb, index }))
                                    {
                                        <tr>
                                            <td>@item.fb.User.Name</td>
                                            <td>@item.fb.User.Email</td>
                                            <td>@item.fb.Message</td>
                                            <td>@item.fb.SubmittedAt.ToString("dd MMM yyyy, hh:mm tt")</td>
                                            <td class="text-center">
                                                <form method="post" asp-action="DeleteFeedback" asp-controller="Admin" asp-route-id="@item.fb.Id" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="bi bi-x-circle"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Fade-out script for alert -->
<script>
    setTimeout(function () {
        const alertBox = document.getElementById("autoFadeAlert");
        if (alertBox) {
            alertBox.classList.remove("show");
            alertBox.classList.add("fade");
            setTimeout(() => alertBox.remove(), 500);
        }
    }, 3000);
</script>

<!-- Bootstrap Icons CDN (include once in layout if needed globally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@await Html.PartialAsync("footer")
