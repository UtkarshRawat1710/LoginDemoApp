@model IEnumerable<Car>

@{
    Layout = null;
}
@await Html.PartialAsync("customerheader")





<section class="car-display container mt-5">
    <h2 class="text-center mb-4">Available Cars</h2>

    <input type="text" id="searchInput" class="form-control mb-4" placeholder="Search by brand, model, color...">

    <div class="row" id="carList">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4 car-card-container">
                <div class="car-card">
                    <img src="@car.ImageUrl" alt="@car.Brand" />
                    <h4>@car.Brand @car.Model</h4>
                    <p><strong>Year:</strong> @car.Year</p>
                    <p><strong>Color:</strong> @car.Color</p>
                    <p><strong>Price:</strong> ₹@car.BookingPrice</p>
                    <button onclick="box(@car.Id)">Book Now</button>

                </div>
            </div>
        }
    </div>
</section>
<script>
    function box(carId) {
        window.location.href = "/User/BookCar?carId=" + carId;
    }
</script>

<script>
    


    // Filter/Search Script
    document.getElementById('searchInput').addEventListener('keyup', function () {
        let filter = this.value.toLowerCase();
        let cards = document.querySelectorAll('.car-card-container');

        cards.forEach(function (card) {
            let text = card.textContent.toLowerCase();
            card.style.display = text.includes(filter) ? 'block' : 'none';
        });
    });
</script>

<style>
    .car-card {
        border: 1px solid #ccc;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        background-color: #f5f5f5;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease-in-out;
    }

        .car-card:hover {
            transform: scale(1.03);
        }

        .car-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 6px;
            margin-bottom: 10px;
        }

    button {
        background: crimson;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        button:hover {
            background: darkred;
        }
</style>
@await Html.PartialAsync("footer")